<div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#koi-orders">Koi Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#trip-orders">Trip Orders</a>
        </li>
    </ul>
    <div class="tab-content">
        <div id="koi-orders" class="tab-pane fade show active">
            <h1>Your Koi Orders</h1>

            <p>
                <a asp-page="Create">Create New Order</a>
            </p>

            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.OrderKois[0].OrderDate)</th>
                        <th>@Html.DisplayNameFor(model => model.OrderKois[0].ShippingType)</th>
                        <th>@Html.DisplayNameFor(model => model.OrderKois[0].Price)</th>
                        <th>Order ID</th>
                        <th>Last Updated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderKois)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.ShippingType)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>@Html.DisplayFor(modelItem => item.Order.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Id">View Details</a> |
                                <!-- Optionally include Edit or Cancel based on status -->
                                @if (item. == "Pending")
                                {
                                     < a asp - page = "./Delete" asp - route - id = "@item.Id" > Cancel </ a >
                                            }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="trip-orders" class="tab-pane fade">
            <h1>Your Trip Orders</h1>

            <p>
                <a asp-page="Create">Create New Trip Order</a>
            </p>

            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.OrderTrips[0].TripStartDate)</th>
                        <th>@Html.DisplayNameFor(model => model.OrderTrips[0].TripEndDate)</th>
                        <th>@Html.DisplayNameFor(model => model.OrderTrips[0].MaxParticipants)</th>
                        <th>Order ID</th>
                        <th>Farm Name</th>
                        <th>Consultant</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderTrips)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.TripStartDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.TripEndDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.MaxParticipants)</td>
                            <td>@Html.DisplayFor(modelItem => item.Order.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Farm.FarmName)</td> <!-- Assuming Farm has a Name property -->
                            <td>@Html.DisplayFor(modelItem => item.Consultant.FullName)</td> <!-- Assuming Consultant has a Name property -->
                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Id">View Details</a> |
                                @if (item.IsActive)
                                {
                                    < a asp - page = "./Delete" asp - route - id = "@item.Id" > Cancel </ a >
                                }
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

