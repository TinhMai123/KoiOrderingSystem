@page
@model KoiOrderingSystem_Web.Pages.Customer.OrderKois.IndexModel

@{
    ViewData["Title"] = "Koi Orders";
}

<h1>Your Koi Orders</h1>

<p>
    <a asp-page="Create">Create New Order</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.OrderKoi[0].OrderDate)</th>
            <th>@Html.DisplayNameFor(model => model.OrderKoi[0].ShippingType)</th>
            <th>@Html.DisplayNameFor(model => model.OrderKoi[0].Price)</th>
            <th>Order ID</th>
            <th>Last Updated</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderKoi) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
            <td>@Html.DisplayFor(modelItem => item.ShippingType)</td>
            <td>@Html.DisplayFor(modelItem => item.Price)</td>
            <td>@Html.DisplayFor(modelItem => item.Order.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">View Details</a>
                <!-- Optionally include Edit or Cancel based on status -->
                @if (item.Status == "Pending")
                {
                    | <a asp-page="./Delete" asp-route-id="@item.Id">Cancel</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
