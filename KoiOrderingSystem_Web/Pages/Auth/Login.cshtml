@page "/Login"
@model KoiOrderingSystem_Web.Pages.LoginModel
@{
}
<div style="min-height: 100vh; display: flex; flex-direction: column; padding: 20px;">
    <div class="d-flex flex-column justify-content-center align-items-center mt-5" style="flex-grow: 1;">
        <h2 class="fw-bold mb-4">Login</h2>

        <form method="post" style="width: 100%; max-width: 400px;">
            <div class="form-group mb-3">
                <label asp-for="Email" class="fw-normal mb-1"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="fw-normal mb-1"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex flex-column align-items-center">
                <button type="submit" class="btn btn-primary w-100 mb-2">Login</button>
                <br />
                <a asp-page="Register" class="btn btn-outline-secondary w-100">Register</a>
            </div>

            @if (Model.Message != null)
            {
                <div class="alert alert-danger mt-3 w-100">
                    @Model.Message
                </div>
            }
        </form>
    </div>
</div>

