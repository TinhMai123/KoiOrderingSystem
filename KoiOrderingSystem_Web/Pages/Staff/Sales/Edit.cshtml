@page
@model KoiOrderingSystem_Web.Pages.Staff.Sales.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Quote.Id" />
            <div class="form-group">
                <label asp-for="Quote.OrderId" class="control-label"></label>
                <select asp-for="Quote.OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                <span asp-validation-for="Quote.OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.SalesStaffId" class="control-label"></label>
                <select asp-for="Quote.SalesStaffId" class="form-control" asp-items="ViewBag.SalesStaffId"></select>
                <span asp-validation-for="Quote.SalesStaffId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.QuoteAmount" class="control-label"></label>
                <input asp-for="Quote.QuoteAmount" class="form-control" />
                <span asp-validation-for="Quote.QuoteAmount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Quote.ApprovalStatus" /> @Html.DisplayNameFor(model => model.Quote.ApprovalStatus)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Quote.CreatedAt" class="control-label"></label>
                <input asp-for="Quote.CreatedAt" class="form-control" />
                <span asp-validation-for="Quote.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.DeletedAt" class="control-label"></label>
                <input asp-for="Quote.DeletedAt" class="form-control" />
                <span asp-validation-for="Quote.DeletedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.UpdatedAt" class="control-label"></label>
                <input asp-for="Quote.UpdatedAt" class="form-control" />
                <span asp-validation-for="Quote.UpdatedAt" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Quote.IsDeleted" /> @Html.DisplayNameFor(model => model.Quote.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
