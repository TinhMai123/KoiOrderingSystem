@page
@model KoiOrderingSystem_Web.Pages.Admin.KoiTypes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>KoiType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KoiType.Id" />
            <div class="form-group">
                <label asp-for="KoiType.Name" class="control-label"></label>
                <input asp-for="KoiType.Name" class="form-control" />
                <span asp-validation-for="KoiType.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="KoiType.IsEndangered" /> @Html.DisplayNameFor(model => model.KoiType.IsEndangered)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="KoiType.IsBatch" /> @Html.DisplayNameFor(model => model.KoiType.IsBatch)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="KoiType.Picture" class="control-label"></label>
                <input asp-for="KoiType.Picture" class="form-control" />
                <span asp-validation-for="KoiType.Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
